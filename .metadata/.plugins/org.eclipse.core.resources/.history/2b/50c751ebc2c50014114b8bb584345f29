package lab2;

import static org.junit.Assert.*;

import java.util.Arrays;
import java.util.Collection;

import org.junit.Test;
import org.junit.runner.RunWith;
import org.junit.runners.Parameterized;
import org.junit.runners.Parameterized.Parameters;

@RunWith(Parameterized.class)
public class NieksztaltekParametrizedTest {

	@Parameters
	public static Collection<Object[]> data() {
		return Arrays.asList(new Object[][] { { 0, 0 }, { 1, 1 }, { -1, -1 },
				{ 9, 9 }, { -9, -9 }, { 10, 10 }, { -10, -10 }, { 3, 8 },
				{ -3, -8 }, {7, 1}, {-7, -1}, { 6, 9 }, { -6, -9} });
	}

	 int fInput;

	 int fExpected;

	
	public NieksztaltekParametrizedTest(int input, int expected) {
		fInput = input;
		fExpected = expected;
	}

	@Test
    public void test() {
		Gra gra = new Gra();
        assertEquals(Integer.valueOf(fExpected), gra.nieksztaltek(fInput));
    }
	
}
